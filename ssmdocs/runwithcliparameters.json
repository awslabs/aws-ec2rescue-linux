{
  "schemaVersion": "2.2",
  "description": "Run EC2 Rescue for Linux with manual configuration via CLI parameters.",
  "parameters": {
    "workingDirectory": {
      "type": "String",
      "description": "(Required) Working directory to run from. Defaults to /home/ec2-user , but could differ based on distro (Ubuntu would be /home/ubuntu for example)",
      "default": "/home/ec2-user"
    },
    "cliParameters": {
      "type": "String",
      "description": "(Required) Default configuration package to run."
    }
  },
  "mainSteps": [{
    "action": "aws:runShellScript",
    "name": "runShellScript",
    "inputs": {
      "runCommand": [
        "#!/bin/bash",
        "curl https://s3.amazonaws.com/ec2rescuelinux/ec2rl.tgz -o ec2rl.tgz",
        "tar -xvf ec2rl.tgz",
        "cd \"$(tar -tf ec2rl.tgz --exclude=\"*/*\")\" || echo \"Failed to enter ec2rl directory\"; exit 1",
        "sudo ./ec2rl {{ cliParameters }}"
      ],
      "workingDirectory": "{{ workingDirectory }}"
    }
  }]
}